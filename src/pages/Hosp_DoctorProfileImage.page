                    <a href="javascript:void(0);" id="btnZoomIn" class="btn" style="padding: 5px; text-decoration: none;">{! $Label.Zoom_IN }</a>
                    <a href="javascript:void(0);" id="btnZoomOut" class="btn" style="padding: 5px; text-decoration: none;">{! $Label.Zoom_Out }</a>
