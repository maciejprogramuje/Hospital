<apex:page id="Hosp_DoctorsPublicSite" standardController="Doctor__c" extensions="Hosp_DoctorsPublicSiteControllerExt">

    <apex:pageBlock title="{! $Label.Random_doctors }" rendered="true">

        <apex:outputPanel >

            <apex:pageBlockTable value="{! randomDoctors }" var="doctor">

                <apex:column headerValue="{! $ObjectType.Doctor__c.fields.FirstLastName__c.label }"
                             value="{! doctor.FirstLastName__c }"/>

                <apex:column headerValue="{! $ObjectType.Doctor__c.fields.Email__c.label }"
                             value="{! doctor.Email__c }"/>

                <apex:column headerValue="{! $ObjectType.Doctor__c.fields.City__c.label }"
                             value="{! doctor.City__c }"/>

                <apex:column headerValue="{! $ObjectType.Doctor__c.fields.Country__c.label }"
                             value="{! doctor.Country__c }"/>
            </apex:pageBlockTable>
        </apex:outputPanel>
    </apex:pageBlock>

    <apex:pageBlock title="Lead" rendered="true">

        <form action="https://webto.salesforce.com/servlet/servlet.WebToLead?encoding=UTF-8" method="POST">

            <input type="hidden" name="oid" value="00D1t000000smfa"/>
            <input type="hidden" name="retURL" value="https://maciejszymczyk-developer-edition.eu16.force.com/randomdoctors/"/>
            <label for="first_name">First Name</label>
            <input  id="first_name" maxlength="40" name="first_name" size="20" type="text" />
            <br/>
            <label for="last_name">Last Name</label><input  id="last_name" maxlength="80" name="last_name" size="20" type="text" />
            <br/>
            <label for="phone">Phone</label><input  id="phone" maxlength="40" name="phone" size="20" type="text" />
            <br/>
            <label for="email">Email</label><input  id="email" maxlength="80" name="email" size="20" type="text" />
            <br/>
            <label for="company">Company</label><input  id="company" maxlength="40" name="company" size="20" type="text" />
            <br/>
            <label for="city">City</label><input  id="city" maxlength="40" name="city" size="20" type="text" />
            <br/>
            <label for="country">Country</label><input  id="country" maxlength="40" name="country" size="20" type="text" />
            <br/>
            <input type="submit" name="submit"/>

        </form>

    </apex:pageBlock>


</apex:page>