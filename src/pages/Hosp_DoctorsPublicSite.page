<apex:page id="Hosp_DoctorsPublicSite" standardController="Doctor__c" extensions="Hosp_DoctorsPublicSiteControllerExt">

    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inconsolata"/>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>

    <style>
    body, html {
      height: 100%;
      font-family: "Inconsolata", sans-serif;
    }

    .bgimg {
      background-position: center;
      background-size: cover;
      background-image: url("/w3images/coffeehouse.jpg");
      min-height: 75%;
    }

    .menu {
      display: none;
    }


    body,h1 {font-family: "Raleway", Arial, sans-serif}
    h1 {letter-spacing: 6px}
    .w3-row-padding img {margin-bottom: 12px}
</style>

    <div class="w3-content" style="max-width:1500px">
        <header class="w3-panel w3-center w3-opacity">
            <div class="w3-padding-32">
                <div class="w3-bar w3-border">
                    <apex:form>
                        <apex:commandButton reRender="doctorBlock, contactPanel" action="{!changeTab}"  value="Doctor">Doctor</apex:commandButton>
                        <apex:commandButton reRender="contactPanel, doctorBlock" action="{!hideDoctors}"  value="Contact">Contact</apex:commandButton>
                    </apex:form>
                </div>
            </div>
        </header>
    </div>

    <apex:outputPanel id="doctorBlock">
        <apex:pageBlock title="{! $Label.Random_doctors }" rendered="{!showDoctors}">

            <apex:outputPanel >

                <apex:pageBlockTable value="{! randomDoctors }" var="doctor">

                    <apex:column headerValue="{! $ObjectType.Doctor__c.fields.FirstLastName__c.label }"
                                 value="{! doctor.FirstLastName__c }"/>

                    <apex:column headerValue="{! $ObjectType.Doctor__c.fields.Email__c.label }"
                                 value="{! doctor.Email__c }"/>

                    <apex:column headerValue="{! $ObjectType.Doctor__c.fields.City__c.label }"
                                 value="{! doctor.City__c }"/>

                    <apex:column headerValue="{! $ObjectType.Doctor__c.fields.Country__c.label }"
                                 value="{! doctor.Country__c }"/>
                </apex:pageBlockTable>
            </apex:outputPanel>
        </apex:pageBlock>
    </apex:outputPanel>



    <apex:outputPanel id="contactPanel">
        <apex:outputPanel  rendered="{!showContact}">
            <apex:pageBlock title="Lead" rendered="true">

                <div class="w3-container" id="where" style="padding-bottom:32px;">
                    <div class="w3-content" style="max-width:700px">
                        <h5 class="w3-center w3-padding-48"><span class="w3-tag w3-wide">Contact US</span></h5>

                            <form action="https://webto.salesforce.com/servlet/servlet.WebToLead?encoding=UTF-8" method="POST">

                                <input type="hidden" name="oid" value="00D1t000000smfa"/>
                                <input type="hidden" name="retURL" value="https://maciejszymczyk-developer-edition.eu16.force.com/randomdoctors/"/>
                                <label for="first_name">First Name</label>
                                <input  id="first_name" maxlength="40" name="first_name" size="20" type="text" class="w3-input w3-padding-16 w3-border"/>

                                <label for="last_name">Last Name</label>
                                <input  id="last_name" maxlength="80" name="last_name" size="20" type="text" class="w3-input w3-padding-16 w3-border"/>

                                <label for="company">Company</label>
                                <input  id="company" maxlength="40" name="company" size="20" type="text" class="w3-input w3-padding-16 w3-border"/>
                                <br/>
                                <label for="phone">Phone</label>
                                <input  id="phone" maxlength="40" name="phone" size="20" type="text" class="w3-input w3-padding-16 w3-border"/>

                                <label for="email">Email</label>
                                <input  id="email" maxlength="80" name="email" size="20" type="text" class="w3-input w3-padding-16 w3-border"/>
                                <br/>
                                <label for="city">City</label>
                                <input  id="city" maxlength="40" name="city" size="20" type="text" class="w3-input w3-padding-16 w3-border"/>

                                <label for="country">Country</label>
                                <input  id="country" maxlength="40" name="country" size="20" type="text" class="w3-input w3-padding-16 w3-border"/>
                                <br/>
                                <input type="submit" name="submit" class="w3-button w3-black"/>
                            </form>
                    </div>
                </div>
            </apex:pageBlock>
        </apex:outputPanel>
    </apex:outputPanel>

    <script>
function openMenu(evt, menuName) {
  var i, x, tablinks;
  x = document.getElementsByClassName("menu");
  for (i = 0; i < x.length; i++) {
    x[i].style.display = "none";
  }
  tablinks = document.getElementsByClassName("tablink");
  for (i = 0; i < x.length; i++) {
    tablinks[i].className = tablinks[i].className.replace(" w3-dark-grey", "");
  }
  document.getElementById(menuName).style.display = "block";
  evt.currentTarget.firstElementChild.className += " w3-dark-grey";
}
document.getElementById("myLink").click();
</script>


</apex:page>